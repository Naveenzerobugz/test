<div class="row list">
    <div class="col-lg-12">
        <div class="kt-portlet">
            <div class="kt-portlet__head">
                <div class="kt-portlet__head-label">
                    <h3 class="kt-portlet__head-title">
                        BillPayment List
                    </h3>
                </div>
                <div class="kt-portlet__head-toolbar">
                    <div class="kt-portlet__head-actions">
                        <button type="button" class="btn btn-bold btn-success-grn btn-sm" onclick="Show()"><i
                                class="fa fa-plus-circle"></i> Add New</button>
                    </div>
                </div>
            </div>
            <div class="cust-tab kt-portlet__body">
                <table class="table text-center table-sm table-striped- table-bordered table-hover table-checkable"
                    id="gvbillpayemntlist">
                    <thead>
                        <tr>
                            <th
